{
  "compilerOptions": {
    "baseUrl": "./",
    // "module": "ESNext",
    "declarationDir": "./es/",
    "jsx": "react",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    // "emitDeclarationOnly": true, 
    "paths": {
      "@/*": ["./*"],
    },
  },
  "include": ["packages/","types/"],
  "exclude": [
    "node_modules/",
    "packages/**/demo/"
  ]
}
