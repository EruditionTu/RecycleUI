{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages",
    "docs/components",
    "docs/siteIndexStyle.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "typings",
  ]
}